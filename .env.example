# .env.example

# --- Bot Configuration ---
# Ваш токен от @BotFather
BOT_TOKEN=

# --- Service Communication ---
# Секретный ключ для авторизации запросов от бота к серверу
API_SECRET_KEY=CHANGE_ME_TO_A_SECURE_RANDOM_STRING_a7b3c9d8e1f2

# --- Database Configuration ---
# Имя пользователя, пароль и название БД для PostgreSQL
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=wb_assist_db

# --- Docker Compose Configuration ---
# Внешний порт для базы данных (для подключения извне, например, через DBeaver)
POSTGRES_PORT=5432
