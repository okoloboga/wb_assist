# AI Chat Service - Environment Configuration

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Порт, на котором будет запущен сервис
AI_CHAT_PORT=9001

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# PostgreSQL (production, рекомендуется)
DATABASE_URL=postgresql://wb_user:wb_password@db:5432/wb_assist

# SQLite (для локальной разработки)
# DATABASE_URL=sqlite:///./ai_chat.db

# Опционально: отдельная БД только для AI Chat
# AI_CHAT_DATABASE_URL=postgresql://wb_user:wb_password@db:5432/ai_chat

# ==========================================
# SECURITY
# ==========================================

# Секретный ключ для API (должен совпадать с основным сервисом)
API_SECRET_KEY=your-secret-api-key-here-change-in-production

# ==========================================
# OPENAI CONFIGURATION
# ==========================================

# OpenAI API ключ (обязательно!)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Кастомный эндпоинт OpenAI (опционально)
# Для использования совместимых API (Azure, DeepSeek и т.д.)
OPENAI_BASE_URL=

# Модель OpenAI
# Рекомендуемые: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# Температура (креативность) от 0.0 до 2.0
# 0.0 - детерминированные ответы
# 1.0 - сбалансированные ответы
# 2.0 - максимально креативные
OPENAI_TEMPERATURE=0.7

# Максимальное количество токенов в ответе
# 1000 токенов ≈ 750 слов ≈ 3000 символов
OPENAI_MAX_TOKENS=1000

# ==========================================
# RATE LIMITING
# ==========================================

# Дневной лимит запросов на пользователя
# Изменяется в коде: crud.py -> DAILY_LIMIT
# По умолчанию: 30 запросов в сутки

# ==========================================
# LOGGING
# ==========================================

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==========================================
# INTEGRATION
# ==========================================

# URL основного сервера (для будущей интеграции с данными пользователя)
SERVER_HOST=http://server:8000

# URL Telegram бота (для будущей интеграции)
BOT_HOST=http://bot:8001

# ==========================================
# ПРИМЕЧАНИЯ
# ==========================================

# 1. Скопируйте этот файл в .env и заполните все значения
# 2. НЕ коммитьте .env в git! Добавьте в .gitignore
# 3. В production используйте надежные пароли и ключи
# 4. Для Docker Compose переменные берутся из .env в корне проекта
# 5. OPENAI_API_KEY можно получить на https://platform.openai.com/api-keys

